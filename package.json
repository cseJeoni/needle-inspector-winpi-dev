{
  "name": "electron-ws-template",
  "version": "1.0.0",
  "description": "Electron 모터 제어 애플리케이션",
  "author": "YBH",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:react\" \"wait-on tcp:5173 && electron electron/main.js\"",
    "dev:react": "vite",
    "start": "electron electron/main.js",
    "build": "vite build && electron-builder",
    "build:linux": "vite build && electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.1.0",
    "html2canvas": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.electron.ws.template",
    "productName": "ElectronWsTemplate",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
